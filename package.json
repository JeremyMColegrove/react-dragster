{
	"name": "react-dragster",
	"private": false,
	"version": "1.0.6",
	"description": "useDragster is a React hook designed to simplify drag and drop event handling by providing easy-to-use abstractions for drag enter, drag leave, and drop events. It also addresses common browser bugs related to these events, ensuring a smooth and reliable user experience.",
	"repository": {
		"url": "https://github.com/JeremyMColegrove/react-dragster"
	},
	"exports": {
		".": {
			"import": "./dist/main.js",
			"require": "./dist/main.cjs"
		}
	},
	"main": "./dist/main.cjs",
	"module": "./dist/main.js",
	"typings": "./dist/main.d.ts",
	"files": [
		"dist"
	],
	"author": "Jeremy Colegrove",
	"type": "module",
	"scripts": {
		"dev": "vite",
		"build": "tsc && vite build",
		"preview": "vite preview"
	},
	"peerDependencies": {
		"react": "^18.2.0",
		"react-dom": "^18.2.0"
	},
	"devDependencies": {
		"@rollup/plugin-typescript": "^11.1.6",
		"@types/react": "^18.2.55",
		"@types/rollup-plugin-peer-deps-external": "^2.2.4",
		"rollup-plugin-peer-deps-external": "^2.2.4",
		"rollup-plugin-typescript-paths": "^1.5.0",
		"terser": "^5.27.1",
		"tslib": "^2.6.2",
		"typescript": "^5.2.2",
		"vite": "^5.1.0"
	}
}
